root = true

[*]
end_of_line = LF
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = off
spaces_around_operators = true

# Django templates
[*.html]
indent_size = 2
max_line_length = 120

# Django migration files
[*/migrations/*.py]
max_line_length = off

# Django settings
[*/settings/*.py]
[*/settings.py]
max_line_length = 120


# Python файлы
[*.py]
indent_size = 4
max_line_length = 120
quote_type = single

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 120

# HTML
[*.html]
indent_size = 2
max_line_length = 120

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Минифицированные файлы
[*.min.*]
trim_trailing_whitespace = false
insert_final_newline = false

# Конфигурационные файлы
[.editorconfig]
[*.ini]
[*.toml]
indent_size = 2

# Django templates
[*.html]
indent_size = 2

[*.min.*]
trim_trailing_whitespace = false

# Git related files
[.git*]
trim_trailing_whitespace = false

# Makefiles должны использовать tabs
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Shell scripts
[*.sh]
indent_size = 2